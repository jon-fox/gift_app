<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".GiftInfoActivity">
    <TextView
        android:id="@+id/dateView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/box_background" />

    <TextView
        android:id="@+id/gifteeNameView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/box_background" />

    <TextView
        android:id="@+id/giftNameView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/box_background" />

    <TextView
        android:id="@+id/giftOccasionView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/box_background" />

    <TextView
        android:id="@+id/giftNotesView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/box_background" />

    <TextView
        android:id="@+id/giftLinkView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/box_background" />

    <TextView
        android:id="@+id/giftAttachmentsView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/box_background" />
</LinearLayout></androidx.constraintlayout.widget.ConstraintLayout>
